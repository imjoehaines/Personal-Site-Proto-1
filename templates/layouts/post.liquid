{% assign post = model %}   

<!doctype html>
<html lang="en">
    <head>

        <title>{% block title %}{{ post.title }} | Joe Haines{% endblock %}</title>
        <link rel="shortcut icon" type="image/ico" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {{ "normalize.css" | asset_url | stylesheet_tag }}
        {{ "layout.css" | asset_url | stylesheet_tag }}
        {{ "media-queries.css" | asset_url | stylesheet_tag }}
        
        {% block styles %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            {% include "header" %}

            <article class="content-wrapper">
                <header class="blog-head">
                    <h1 class="blog-title">{{ post.title }}</h1>
                    <span class="date">{{ post.date | date: "%A, %B %d, %Y" }}</span>
                </header>

                {% if post.img %}
                    <figure class="blog-img">
                        <div>
                            <img src="{{ post.img | asset_url }}" />
                        </div>
                        {% if post.caption or post.imgattribution %}
                            <figcaption>
                                <span>{{ post.caption }}</span>
                                {% if post.imgsrc and post.imgattribution %}
                                    <span {% if post.caption %}class="divider"{% endif %}>Source:<a href="{{ post.imgsrcurl }}">{{ post.imgsrc }}</a></span>
                                {% endif %}
                            </figcaption>
                        {% endif %}
                    </figure>
                {% endif %}


                <section class="blog-content">
                    {% block content %}{% endblock %}
                    
                    <ul class="tags">
                        <li>tags:</li>
                        {% for tag in post.tags %}
                            {% include "tagination" %}
                        {% endfor %}
                    </ul>
                </section>


            </article>

        </div>
        {% block scripts %}{% endblock %}
    </body>
</html>