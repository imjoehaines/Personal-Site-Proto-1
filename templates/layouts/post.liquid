{% assign post = model %}   

<!doctype html>
<html lang="en">
    <head>

        <title>{% block title %}{{ post.title }} | Joe Haines{% endblock %}</title>
        
        {% include "_head" %}

        {% block styles %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            {% include "header" %}

            <article class="content-wrapper">
                <header class="blog-head">
                    <h2 class="blog-title">{{ post.title }}</h2>
                    <span class="date">{{ post.date | date: "%A %B %d %Y" }}</span>
                    <ul class="tags">
                        <li>tags:</li>
                        {% for tag in post.tags %}
                            {% include "tagination" %}
                        {% endfor %}
                    </ul>

                </header>

                {% if post.img %}
                    <figure class="blog-img">
                        <div>
                            <img src="{{ post.img | asset_url }}" />
                            {% if post.caption or post.imgattribution %}
                                <figcaption>
                                    <span>{{ post.caption }}</span>
                                    {% if post.imgsrc and post.imgattribution %}
                                        <span {% if post.caption %}class="divider"{% endif %}>Source:<a href="{{ post.imgsrcurl }}">{{ post.imgsrc }}</a></span>
                                    {% endif %}
                                </figcaption>
                            {% endif %}
                        </div>
                    </figure>
                {% endif %}


                <section class="blog-content">
                    {% if post.subtitle %}
                        <h2>{{ post.subtitle }}</h2>
                    {% endif %}
                    {% block content %}{% endblock %}
                </section>

                {% include "footer" %}
            </article>

        </div>
        {% block scripts %}{% endblock %}
    </body>
</html>