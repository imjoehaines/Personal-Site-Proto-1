{% assign post = model %}   

<!doctype html>
<html lang="en">
    <head>

        <title>{% block title %}{{ post.title }} | Joe Haines{% endblock %}</title>
        <link rel="shortcut icon" type="image/ico" href="/favicon.ico" />

        {{ "normalize.css" | asset_url | stylesheet_tag }}
        {{ "layout.css" | asset_url | stylesheet_tag }}
        {{ "media-queries.css" | asset_url | stylesheet_tag }}
        
        {% block styles %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            {% include "header" %}

            <article class="content-wrapper">
                <header class="blog-head">
                    <h1 class="blog-title">{{ post.title }}</h1>
                    <span class="date">{{ post.date | date: "%A, %B %d, %Y" }}</span>
                </header>

                {% if post.img %}
                    <figure class="blog-img">
                        <img src="{{ post.img | asset_url }}" />
                        <figcaption>{{ post.caption }}{% if post.imgsrc and post.imgattribution %} <span class="img-src">Image from <a href="{{ post.imgsrcurl }}">{{ post.imgsrc }}</a></span>{% endif %}</figcaption>
                    </figure>
                {% endif %}


                <section class="blog-content">
                    {% block content %}{% endblock %}
                    
                    <ul class="tags">
                        <li>tags:</li>
                        {% for tag in post.tags %}
                            {% include "tagination" %}
                        {% endfor %}
                    </ul>
                </section>


            </article>

        </div>
        {% block scripts %}{% endblock %}
    </body>
</html>