<p class="pagination">
	{% if blogpage %}
		{% capture pageurl %}/blog-page-{% endcapture %}
	{% else %}
		{% capture pageurl %}/blog/tag/{{ tagpage }}/page-{% endcapture %}
	{% endif %}

	{% if collection.previous %}
		<a href="{{ pageurl }}{{ collection.current_page | minus:1 }}" class="page-link">Previous</a>
	{% else %}
		<a class="page-link disabled">Previous</a>
	{% endif %}

	Showing posts {{ collection.current_offset | plus: 1 }} -
		{% if collection.next %}
			{{ collection.current_offset | plus: collection.page_size }} 
		{% else %}
			{{ collection.size }}
		{% endif %}
	of {{ collection.size }}

	{% if collection.next %}
		<a href="{{ pageurl }}{{ collection.current_page | plus:1 }}" class="page-link">Next</a>
	{% else %}
		<a class="page-link disabled">Next</a>
	{% endif %}
</p>
