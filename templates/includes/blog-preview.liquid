      <ul class="blog-preview">
      {% for post in collection.items %}
	
	        <li class="blog-post">
	            <h2><a href="{{ post.slug }}">{{ post.title }}</a></h2>
	            
	            <span class="date">{% include "date" %}</span>
				
				{% if post.tags %}
					<ul class="tags">
						{% for tag in post.tags %}{% include "tagination" %}{% endfor %}
					</ul>
				{% else %}
					<ul class="tags">
	                    <li>no tags</li>
	                </ul>
				{% endif %}

	            {% include post-preview %}
	        </li>

      {% endfor %}
      </ul>